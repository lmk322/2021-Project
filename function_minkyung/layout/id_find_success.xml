<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_find_text1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FACC2E"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:text="아이디찾기"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/id_find_success_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="130dp"
        android:text="회원님의 아이디는 abcd입니다."
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/button_id_success_login"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        android:text="로그인 하러 가기"
        android:textSize="15sp"
        android:onClick="mOnClick"/>

    <Button
        android:id="@+id/button_id_success_pw_find"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_plain"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="0dp"
        android:text="비밀번호 찾기"
        android:textSize="15sp"
        android:onClick="mOnClick"/>


</LinearLayout>