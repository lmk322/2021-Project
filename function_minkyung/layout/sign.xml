<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FACC2E"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:text="회원가입"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/sign_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:text="  아이디"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/sign_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/sign_pw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:text="비밀번호\n   확인"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/sign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:text="   이름"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/sign_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/edit_sign_id"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="아이디를 입력하세요"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/edit_sign_pw"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="비밀번호를 입력하세요"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/edit_sign_pw1"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="비밀번호를 입력하세요"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/edit_sign_name"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="이름을 입력하세요"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/edit_sign_tel"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:text="전화번호를 입력하세요"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/check"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="0dp"
            android:text="중복확인"
            android:textSize="12sp"
            android:onClick="mOnClick"/>

    </GridLayout>

    <Button
        android:id="@+id/button_sign"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="0dp"
        android:text="회원가입"
        android:textSize="15sp"
        android:onClick="mOnClick"/>

</LinearLayout>